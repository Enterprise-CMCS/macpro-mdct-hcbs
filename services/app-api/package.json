{
  "name": "app-api",
  "version": "1.0.0",
  "main": "handler.js",
  "license": "CC0-1.0",
  "scripts": {
    "coverage": "jest --coverage",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-serverless": "serverless-bundle test"
  },
  "devDependencies": {
    "@enterprise-cmcs/serverless-waf-plugin": "^1.4.0",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.12",
    "@types/jsdom": "20.0.0",
    "@types/node": "^22.5.1",
    "aws-sdk-client-mock": "^4.0.1",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "serverless-api-client-certificate": "^1.0.2",
    "serverless-associate-waf": "^1.2.1",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.637.0",
    "aws-jwt-verify": "^3.1.0",
    "dompurify": "^3.1.6",
    "jsdom": "20.0.0",
    "jwt-decode": "3.1.2",
    "util": "^0.12.5"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "globals": {
      "isolatedModules": true
    },
    "coverageReporters": [
      "json",
      [
        "lcov",
        {
          "projectRoot": "../../"
        }
      ],
      "text",
      "text-summary"
    ],
    "collectCoverageFrom": [
      "handlers/**/*.{ts,tsx}",
      "utils/**/*.{ts,tsx}",
      "!utils/constants/*",
      "!utils/testing/*",
      "!utils/types/*"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "#node-web-compat": "./node-web-compat-node.js"
    }
  }
}
