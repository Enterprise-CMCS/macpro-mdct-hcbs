{
  "name": "app-api",
  "version": "1.0.0",
  "main": "handler.js",
  "license": "CC0-1.0",
  "scripts": {
    "coverage": "jest --coverage",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.12",
    "@types/jsdom": "20.0.0",
    "@types/node": "^22.5.1",
    "aws-sdk-client-mock": "^4.0.1",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.637.0",
    "@aws-sdk/lib-dynamodb": "^3.637.0",
    "aws-jwt-verify": "5.0.0",
    "dompurify": "^3.1.6",
    "jsdom": "^26.0.0",
    "jwt-decode": "3.1.2",
    "kafkajs": "^2.2.4",
    "ksuid": "^3.0.0",
    "util": "^0.12.5",
    "yup": "^1.6.1"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "globals": {
      "isolatedModules": true
    },
    "coverageReporters": [
      "json",
      [
        "lcov",
        {
          "projectRoot": "../../"
        }
      ],
      "text",
      "text-summary"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!.build",
      "!.coverage",
      "!node_modules"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "#node-web-compat": "./node-web-compat-node.js"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/testing/setupJest.ts"
    ]
  }
}
